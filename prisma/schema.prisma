// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id              Int       @id @default(autoincrement())
  name            String
  description     String
  longDescription String
  category        Category
  visits          Int?
  downloads       Int?
  revenue         Float?
  stars           Int?
  techStack       String[]
  size            Float?
  sizeUnit        Unit?
  createdAt       DateTime
  updatedAt       DateTime?
  links           Link[]
  assets          Asset[]
  licenses        License[]
}

model License {
  id        Int     @id @default(autoincrement())
  project   Project @relation(fields: [projectId], references: [id])
  projectId Int
  name      String
  url       String
}

model Link {
  id        Int     @id @default(autoincrement())
  project   Project @relation(fields: [projectId], references: [id])
  projectId Int
  name      String
  url       String
}

model Asset {
  id        Int     @id @default(autoincrement())
  project   Project @relation(fields: [projectId], references: [id])
  projectId Int
  mimetype  String
  name      String
  alt       String?
  role      Role
}

enum Category {
  GAMEDEV
  WEBDEV
  MOBILE
  BOT
  LOCALIZATION
  UIUX
  DESIGN
}

enum Role {
  CARD
  BANNER
  MEDIA
}

enum Unit {
  B
  KB
  MB
  GB
}
