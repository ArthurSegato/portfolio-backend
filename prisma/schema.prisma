// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id              Int      @id @default(autoincrement())
  name            String
  description     String
  longDescription String
  category        Category
  visits          Int?
  downloads       Int?
  revenue         Float?
  techStack       String[]
  size            Float?
  sizeUnit        Unit?
  links           Link[]
  card            Card?
  cover           Cover?
  assets          Asset[]
  embeds          String[]
}

model Link {
  id        Int     @id @default(autoincrement())
  project   Project @relation(fields: [projectId], references: [id])
  projectId Int
  name      String
  url       String
}

model Card {
  id        Int     @id @default(autoincrement())
  project   Project @relation(fields: [projectId], references: [id])
  projectId Int     @unique
  name      String
  mimetype  String
  url       String
}

model Cover {
  id        Int     @id @default(autoincrement())
  project   Project @relation(fields: [projectId], references: [id])
  projectId Int     @unique
  name      String
  mimetype  String
  url       String
}

model Asset {
  id        Int     @id @default(autoincrement())
  project   Project @relation(fields: [projectId], references: [id])
  projectId Int
  name      String
  mimetype  String
  url       String
  alt       String
}

enum Category {
  GAMEDEV
  WEBDEV
  MOBILE
  BOT
  LOCALIZATION
  UIUX
  DESIGN
}

enum Unit {
  B
  KB
  MB
  GB
}
