// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id              Int      @id @default(autoincrement())
  name            String
  description     String
  longDescription String
  category        Category
  visits          String
  downloads       Int
  revenue         Float
  stars           Int
  techStack       String[]
  license         String
  size            String
  createdAt       DateTime
  updatedAt       DateTime
  links           Link[]
  assets          Asset[]
}

model Link {
  id        Int     @id @default(autoincrement())
  project   Project @relation(fields: [projectId], references: [id])
  projectId Int
  name      String
  url       String
}

model Asset {
  id        Int        @id @default(autoincrement())
  project   Project    @relation(fields: [projectId], references: [id])
  projectId Int
  type      FileFormat
  path      String
  alt       String?
  hash      String?
  role      Role
}

enum Category {
  GAMEDEV
  WEBDEV
  MOBILE
  BOT
  LOCALIZATION
  UI
  UX
  DESIGN
}

enum FileFormat {
  IMAGE
  VIDEO
}

enum Role {
  CARD
  BANNER
  MEDIA
}
